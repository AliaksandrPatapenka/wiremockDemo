{
	"request":{
		"method": "POST",
		"url": "/checkXML",
        "bodyPatterns": [
		  {"matchesXPath": "//item[productId = 'PROD-001']"},
		  {"matchesXPath": "//item[string-length(name) > 0]"}
		]
  },
	"response": {
		"status": 200,
		"bodyFileName": "checkXML.xml",
		"headers": {
			"Content-Type": "text/xml; charset=utf-8" 
		},
		"transformers": ["body-transformer"],
		"delayDistribution": {
			"type": "lognormal",
			"median": 200,
			"sigma": 0.1
		}
	}
}